#! /usr/bin/env bash

wall=$(find ~/wallpapers/Images/ -maxdepth 1 | shuf -n 1)
# path="/home/sumit/wallpapers/Images/$wall"

cp "$wall" ~/.config/wall.png &&
  swww img "$wall" \
    --transition-type=any \
    --transition-step=60 \
    --transition-fps=60 \
    --transition-duration=.7 &&
  hellwal --no-cache -i "$wall" -b 0.3
