#! /usr/bin/env bash

choice=$(cliphist list | fzf --ansi \
  -d $'\t' \
  --with-nth 2 \
  --color=pointer:1,prompt:4,hl:4,bg+:'#45403d',fg+:7,hl+:1 \
  --prompt='Clip > ' \
  --preview-window=right:50% \
  --preview='"$HOME"/scripts/fpreview.sh {}')

[ -n "$choice" ] && printf '%s' "$choice" | cliphist decode | wl-copy
